<%= render 'header' %>

<div class="container">
  <div class="row movie-display">
    <div class="col-lg-6">
      <img class="img-display-poster" src="<%= @movie.poster_url %>">
    </div>
    <div class="col-lg-6 movie-display-content">
      <p class="movie-header-content">
      <p class="btn-movie-edit"><%= link-to "Edit movie", edit_movie_path(@movie) %></p>
    </div>
    <div>
      <p><span class="movie-rating"><%= @movie.rating %></span></p>
    </div>

    <p>
      <%= @movie.overview %>
    </p>

    <div>
     <iframe
        width="500"
        height="315"
        src="https://www.youtube.com <%= @movie.trailer %>"
        title="Youtube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen>
      </iframe>
    </div>
  </div>
</div>
